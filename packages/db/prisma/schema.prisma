generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// CONTENT MODELS
// ============================================

model Article {
  id            String    @id @default(cuid())
  title         String
  slug          String    @unique
  excerpt       String?   @db.Text
  content       String    @db.Text
  coverImage    String?
  
  status        ArticleStatus @default(QUEUED)
  publishedAt   DateTime?
  readingTime   Int?
  viewCount     Int       @default(0)
  clapsCount    Int       @default(0)
  
  // Relations
  category      Category? @relation(fields: [categoryId], references: [id])
  categoryId    String?
  tags          Tag[]
  comments      Comment[]
  likes         Like[]
  claps         Clap[]
  
  // AI Generation metadata
  aiGenerated   Boolean   @default(false)
  aiProvider    String?   // "ollama" | "openrouter" | "openai"
  aiModel       String?
  aiPrompt      String?   @db.Text
  pipelineState String?   @db.Text // LangGraph state JSON
  outline       Json?     // Saved outline for HITL
  
  // SEO & Monetization
  seoScore      Int?
  metaTitle     String?
  metaDescription String? @db.Text
  affiliateData Json?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([status])
  @@index([publishedAt])
  @@index([slug])
}

model Category {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String?
  articles    Article[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Tag {
  id       String    @id @default(cuid())
  name     String    @unique
  slug     String    @unique
  articles Article[]
  
  createdAt DateTime @default(now())
}

// ============================================
// SOCIAL MODELS
// ============================================

model Like {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipAddress String?  // For guest likes
  createdAt DateTime @default(now())

  @@index([articleId])
  @@index([userId])
}

model Comment {
  id        String    @id @default(cuid())
  content   String    @db.Text
  articleId String
  article   Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  parentId  String?
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentToComment")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([articleId])
  @@index([userId])
}

model Clap {
  id        String   @id @default(cuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  ipAddress String?  // For guest claps
  score     Int      @default(1) // Number of claps (1-50)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([articleId, userId])
  @@unique([articleId, ipAddress])
  @@index([articleId])
  @@index([userId])
}

// ============================================
// USER & AUTH (NextAuth compatible)
// ============================================

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  avatar        String?   // Keep for legacy
  bio           String?   @db.Text
  role          UserRole  @default(USER)
  passwordHash  String?
  
  accounts      Account[]
  sessions      Session[]
  comments      Comment[]

  likes         Like[]
  claps         Clap[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// AI CONTENT QUEUE
// ============================================

model ContentQueue {
  id          String      @id @default(cuid())
  topic       String
  keywords    String[]
  category    String?
  priority    Int         @default(0)
  status      QueueStatus @default(PENDING)
  articleId   String?     // Created article reference
  error       String?     @db.Text
  scheduledAt DateTime?
  processedAt DateTime?
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([status])
  @@index([scheduledAt])
}

// ============================================
// SETTINGS
// ============================================

model Settings {
  id              String  @id @default("default")
  
  // Default LLM provider
  defaultProvider String  @default("openai")
  
  // Provider configurations (encrypted in production)
  ollamaEndpoint  String?
  ollamaModel     String?
  openrouterModel String?
  openaiModel     String  @default("gpt-4o")
  
  // Automation settings
  autoPublish     Boolean @default(false)
  dailyLimit      Int     @default(3)
  
  // Site settings
  siteName        String  @default("My Blog")
  siteDescription String?
  
  updatedAt       DateTime @updatedAt
}

// ============================================
// MEDIA
// ============================================

model Media {
  id          String   @id @default(cuid())
  filename    String
  url         String
  publicId    String   // Cloudinary public_id
  width       Int?
  height      Int?
  format      String?
  bytes       Int?
  
  createdAt   DateTime @default(now())

  @@index([publicId])
}

// ============================================
// ENUMS
// ============================================

enum ArticleStatus {
  DRAFT
  QUEUED
  PLANNING
  AWAITING_APPROVAL
  RESEARCHING
  WRITING
  OPTIMIZING
  REVIEW
  PUBLISHED
  REJECTED
}

enum QueueStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum UserRole {
  ADMIN
  USER
}
